{
  "name": "小学数学口算快速出题器",
  "version": "1.2.7",
  "description": "专为小学生设计的数学练习工具，支持自动出题、在线答题、计时测试和打印功能",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "build:all": "electron-builder --win --x64 --ia32",
    "pack": "electron-builder --dir"
  },
  "author": "AI库",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.aiku.math-practice",
    "productName": "小学数学口算出题器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "小学数学口算出题器"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.exe"
    }
  }
}
